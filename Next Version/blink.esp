//Setup:
//SETGPIO(pinNumber,pinMode [,lowOUTPUTValue(true/false)] [,pinName[,pinAssociatedValue(ex.:timeOnDelay)]]]
SETGPIO(2, OUTPUT, true);		//D4
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//Traitement du switch GPIO(2):		//D4
if  GPIO(2)				then timer(Off, 2500);
if  timer(Off)				then !GPIO(2)+clearTimer(Off)+timer(On, 1000);
if  timer(On)				then  GPIO(2)+clearTimer(On);
